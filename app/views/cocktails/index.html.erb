<% colors = ["#085f63", "#15cda8", "#247e6c"] %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(../../assets/images/kleurenpalet.jpg);">
  <div>
    <h1>
      <span id="banner-typed-text"></span>
    </h1>
  </div>
</div>


<div class="cards">
<% @cocktails.each do |cocktail| %>
